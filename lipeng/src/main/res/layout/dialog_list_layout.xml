<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_click_gray"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:minHeight="@dimen/dp_44"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/sp_16" />


    <include layout="@layout/line_w" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/butt"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_click_dialog_lift_and_right_gray"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/sp_14" />


        <include
            android:id="@+id/line"
            layout="@layout/line_h" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_click_dialog_right_gray"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>